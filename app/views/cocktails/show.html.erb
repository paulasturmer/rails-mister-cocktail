<div class="container">
  <div class="row justify-content-center">
    <col-4 class="col-md-6">
        <h1><%= @cocktail.name %></h1>

        <ul>
        <p>Doses</p> 
        
              
        <% @cocktail.doses.each do |dose| %>
          <li>
            <%= dose.description %> - <%= dose.ingredient.name %>
          </li>
        <% end %>
      </ul>
      </col-4>
      </div>
    </div>
      <%= render "doses/new", cocktail: @cocktail, dose: @dose %>
