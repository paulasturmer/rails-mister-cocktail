<div class="container">
  <div class="row justify-content-center">
    <col-4 class="col-md-6">
      <h3>New Dose</h3>
      <%= simple_form_for [cocktail, dose] do |f| %>
        <%= f.association :ingredient, input_html: { class: "beautiful-dropdown" }, include_hidden: false %>
        <%= f.input :description %>
        <%= f.button :submit %>
      <% end %>
    </col-4>
  </div>
</div>